page {
	background: #eee;
}
.index-container {
  background-color: #f2f2f2;
}
/*menu list*/
.tableviewcell {
	padding: 20rpx 40rpx;
	border-bottom: 1rpx solid #ddd;
	color: #666;
	background: white;
	display: flex;
	align-items: center;
}

/*icon*/
.tableviewcell image {
	width: 60rpx;
	height: 60rpx;
}

/*text*/
.tableviewcell text {
	font-size: 16px;
	margin-left: 10px;
}



.order-area {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: white;
  margin: 10rpx 0;
  padding: 10rpx 0;
}

.my-info,

.my-info,.order-info,.other-info{
    width: 100%;
    background-color:#fff;
    margin-top: 20rpx;
    font-size: 14px;
    line-height: 28px;
    border: solid #e5e5e5;
    border-width: 1px 0;
}

.my-info{
    padding:40rpx;
}
.no-now{
    color: #999;
}

.my-info{
    height:100rpx;
}

.my-name{
    font-size: 16px;
    color:#708090;
    height: 55%;
}

.my-img{
    width:100rpx;
    height:100rpx;
    border-radius: 20rpx;
    float: left;
    margin-right: 20rpx;
}

.my-name,
.my-identification {
    line-height: 50rpx;
     color:#708090;
}

